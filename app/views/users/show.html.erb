<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nickname) %>:</strong></dt>
  <dd><%= @user.nickname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:hp) %>:</strong></dt>
  <dd><%= @user.hp %></dd>
  <dt><strong><%= model_class.human_attribute_name(:attack) %>:</strong></dt>
  <dd><%= @user.attack %></dd>
  <dt><strong><%= model_class.human_attribute_name(:defence) %>:</strong></dt>
  <dd><%= @user.defence %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              users_path, :class => 'btn btn-default'  %>
<%= link_to 'Attack',
            attack_path(@user),
            method: :put,
            data: { confirm: 'Attack?' },
            class: 'btn btn-default btn-danger' %>
